<% layout('layout') -%>
<div class="container border">
  <div class="row">
    <% for(var i =0; i< products.length; i++){ %>
    <div class="col-md-3">
      <a href="/product/<%= products[i]._id %>">
        <div class="thumbnail" style="height:400px">
          <img src="<%= products[i].image %>" alt="" />
          <div class="caption">
            <h3><%= products[i].name %></h3>
            <p>Description: <%= products[i].description %></p>
            <p>Category: <%= products[i].category.name %></p>
            <p class="form inline">
              <b>
                <span style="float:right">
                  <% if(products[i].available == true) { %>
                  <button class="btn btn-primary status">Available</button>
                  <% } else { %>
                  <button class="btn btn-warning status">Unavailable</button>
                  <% } %>
                </span></b
              >
            </p>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>
